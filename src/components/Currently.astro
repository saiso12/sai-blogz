---
interface NowItem {
  label: string;
  value: string;
  link?: string;
}

interface Props {
  items: NowItem[];
}

const { items } = Astro.props;
---

<div class="now-bar">
    {items.map((item, i) => (
        <>
            <div class="now-item">
                <span class="now-label">{item.label}</span>
                {item.link ? (
                    <a href={item.link} class="now-value" target={item.link.startsWith('http') ? '_blank' : undefined}>
                        {item.value}
                    </a>
                ) : (
                    <span class="now-value">{item.value}</span>
                )}
            </div>
            {i < items.length - 1 && <span class="now-sep">|</span>}
        </>
    ))}
</div>
